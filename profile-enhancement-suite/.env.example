# ===============================================
# RESUME AI - FRONTEND ENVIRONMENT CONFIGURATION  
# ===============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ===============================================
# API CONFIGURATION
# ===============================================

# Backend API Base URL
# For development with Vite proxy, use relative path
VITE_API_BASE_URL="/api/v1"

# For direct API calls (without proxy), use full URL
# VITE_API_BASE_URL="http://localhost:8001/api/v1"

# API Configuration
VITE_API_TIMEOUT=30000  # 30 seconds
VITE_API_RETRY_ATTEMPTS=3

# ===============================================
# APPLICATION SETTINGS
# ===============================================

# App metadata
VITE_APP_NAME="Resume AI"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="AI-powered resume optimization platform"

# Environment
VITE_NODE_ENV="development"  # development, staging, production
VITE_DEBUG_MODE=true

# ===============================================
# AUTHENTICATION SETTINGS
# ===============================================

# JWT Configuration
VITE_TOKEN_STORAGE_KEY="resume_ai_token"
VITE_REFRESH_TOKEN_STORAGE_KEY="resume_ai_refresh_token"
VITE_AUTH_REDIRECT_URL="/auth"

# Session management
VITE_SESSION_TIMEOUT=30  # minutes
VITE_AUTO_LOGOUT_WARNING=5  # minutes before logout

# ===============================================
# UI/UX CONFIGURATION
# ===============================================

# Theme settings
VITE_DEFAULT_THEME="light"  # light, dark, system
VITE_ENABLE_THEME_TOGGLE=true

# File upload settings
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_ACCEPTED_FILE_TYPES=".pdf,.docx,.txt"
VITE_MAX_FILES_PER_UPLOAD=5

# UI feedback
VITE_TOAST_DURATION=5000  # milliseconds
VITE_LOADING_DELAY=500  # milliseconds

# ===============================================
# FEATURE FLAGS
# ===============================================

# Core features
VITE_FEATURE_RESUME_UPLOAD=true
VITE_FEATURE_JOB_ANALYSIS=true
VITE_FEATURE_GAP_ANALYSIS=true
VITE_FEATURE_REAL_TIME_OPTIMIZATION=true
VITE_FEATURE_EXPORT=true

# Advanced features
VITE_FEATURE_PROJECT_GENERATION=false
VITE_FEATURE_ANALYTICS_DASHBOARD=false
VITE_FEATURE_TEAM_COLLABORATION=false
VITE_FEATURE_INTERVIEW_PREP=false

# Experimental features
VITE_FEATURE_VOICE_INPUT=false
VITE_FEATURE_AI_CHAT=false
VITE_FEATURE_BULK_OPTIMIZATION=false

# ===============================================
# ANALYTICS & MONITORING
# ===============================================

# Google Analytics (Optional)
VITE_GA_TRACKING_ID=""
VITE_GA_ENABLED=false

# User analytics
VITE_TRACK_USER_ACTIONS=false
VITE_ANALYTICS_DEBUG=false

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_SENTRY_DSN=""  # For error tracking

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================

# Development tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK_DATA=false
VITE_SHOW_API_RESPONSES=false

# Testing configuration
VITE_ENABLE_TEST_IDS=true
VITE_MOCK_API_CALLS=false

# Performance
VITE_ENABLE_LAZY_LOADING=true
VITE_BUNDLE_ANALYZER=false

# ===============================================
# PRODUCTION SETTINGS
# ===============================================

# Security (production only)
VITE_ENABLE_CSP=false  # Content Security Policy
VITE_SECURE_HEADERS=false

# Performance (production only)
VITE_ENABLE_PWA=false  # Progressive Web App
VITE_ENABLE_SERVICE_WORKER=false
VITE_ENABLE_COMPRESSION=true

# SEO (production only)
VITE_SITE_URL="https://your-domain.com"
VITE_SEO_TITLE="Resume AI - Intelligent Resume Optimization"
VITE_SEO_DESCRIPTION="AI-powered resume optimization platform using OpenAI GPT and machine learning"
VITE_SEO_KEYWORDS="resume, AI, optimization, ATS, job search, career"

# ===============================================
# EXTERNAL INTEGRATIONS
# ===============================================

# Social login (if implemented)
VITE_GOOGLE_CLIENT_ID=""
VITE_LINKEDIN_CLIENT_ID=""
VITE_GITHUB_CLIENT_ID=""

# External services
VITE_STRIPE_PUBLISHABLE_KEY=""  # For payments
VITE_INTERCOM_APP_ID=""  # For customer support

# ===============================================
# BRANDING & CUSTOMIZATION
# ===============================================

# Logo and branding
VITE_LOGO_URL="/logo.svg"
VITE_FAVICON_URL="/favicon.ico"
VITE_BRAND_COLOR="#0066CC"

# Contact information
VITE_SUPPORT_EMAIL="support@resumeai.com"
VITE_CONTACT_URL="/contact"

# ===============================================
# NOTIFICATIONS & COMMUNICATION
# ===============================================

# Email notifications
VITE_ENABLE_EMAIL_NOTIFICATIONS=false

# Push notifications (if PWA enabled)
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_VAPID_PUBLIC_KEY=""

# ===============================================
# CONTENT & COPY
# ===============================================

# Application text
VITE_APP_TAGLINE="Transform Your Resume with AI"
VITE_HERO_TITLE="AI-Powered Resume Optimization"
VITE_HERO_SUBTITLE="Get ATS-friendly resumes tailored for your dream job"

# Legal pages
VITE_PRIVACY_POLICY_URL="/privacy"
VITE_TERMS_OF_SERVICE_URL="/terms"

# ===============================================
# NOTES
# ===============================================
# 1. All VITE_ prefixed variables are exposed to the browser
# 2. Never put sensitive information in frontend environment variables
# 3. Use feature flags to enable/disable functionality
# 4. Consider using a configuration management service for production
# 5. Regularly review and update environment variables