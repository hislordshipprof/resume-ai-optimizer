# ===============================================
# RESUME AI - BACKEND ENVIRONMENT CONFIGURATION
# ===============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ===============================================
# APPLICATION SETTINGS
# ===============================================
APP_NAME="Resume AI Backend"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ===============================================
# API CONFIGURATION
# ===============================================
API_HOST="0.0.0.0"
API_PORT=8001
API_PREFIX="/api/v1"
CORS_ORIGINS="http://localhost:8081,http://localhost:3000"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# PostgreSQL Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/resume_ai_db"
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="resume_ai_db"
DB_USER="postgres"
DB_PASSWORD="your_secure_password_here"

# Database pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ===============================================
# REDIS CONFIGURATION (Caching)
# ===============================================
REDIS_URL="redis://localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600  # Cache time-to-live in seconds

# ===============================================
# SECURITY & AUTHENTICATION
# ===============================================
# JWT Secret Key - Generate a strong random key for production
SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
PASSWORD_HASH_ALGORITHM="bcrypt"
BCRYPT_ROUNDS=12

# ===============================================
# AI/ML SERVICE CONFIGURATION
# ===============================================

# OpenAI API Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"  # or gpt-4 for better quality
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# AI Service Settings
AI_TIMEOUT=30  # seconds
AI_RETRY_ATTEMPTS=3
AI_CACHE_ENABLED=true

# Resume Parsing Configuration
RESUME_PARSING_CONFIDENCE_THRESHOLD=0.7
MAX_RESUME_PAGES=10

# Job Analysis Configuration
JOB_ANALYSIS_MAX_LENGTH=10000  # characters
SKILLS_EXTRACTION_CONFIDENCE=0.6

# ===============================================
# FILE STORAGE CONFIGURATION
# ===============================================

# Local file storage
UPLOAD_DIR="./uploads"
TEMP_DIR="./temp"
EXPORT_DIR="./exports"

# File processing
ALLOWED_EXTENSIONS="pdf,docx,txt"
MAX_FILE_SIZE=10485760  # 10MB
FILE_CLEANUP_HOURS=24

# ===============================================
# EMAIL CONFIGURATION (Optional)
# ===============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@resumeai.com"

# ===============================================
# EXTERNAL SERVICES (Optional)
# ===============================================

# Monitoring & Analytics
SENTRY_DSN=""  # For error tracking
GOOGLE_ANALYTICS_ID=""

# Cloud Storage (if using AWS S3, Google Cloud, etc.)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET_NAME=""

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================

# Testing
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/resume_ai_test_db"

# Development tools
ENABLE_DOCS=true  # Enable /docs endpoint
ENABLE_PROFILING=false
MOCK_AI_RESPONSES=false  # Set to true to mock AI calls during development

# ===============================================
# PRODUCTION SETTINGS
# ===============================================
# These should only be set in production

# Security headers
SECURE_COOKIES=false  # Set to true in production with HTTPS
CSRF_PROTECTION=false  # Enable in production

# Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# SSL/TLS
SSL_REDIRECT=false  # Force HTTPS in production
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# ===============================================
# FEATURE FLAGS
# ===============================================
FEATURE_REAL_TIME_OPTIMIZATION=true
FEATURE_PROJECT_GENERATION=false
FEATURE_ANALYTICS_DASHBOARD=false
FEATURE_TEAM_COLLABORATION=false

# ===============================================
# NOTES
# ===============================================
# 1. Generate strong passwords and keys for production
# 2. Use environment-specific values for different deployments
# 3. Consider using a secrets management service in production
# 4. Regularly rotate API keys and passwords
# 5. Monitor usage and costs for external APIs (OpenAI)